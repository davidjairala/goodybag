<!DOCTYPE html>
<html>
  <head>
    <title><%= page.fullTitle() %></title>
    <link rel='stylesheet' href='/stylesheets/style.css?v=<%= assetVersion %>' />
  </head>
  <body>
    <header><%= page.siteName() %></header>

    <h1><%= page.title() %></h1>

    <% if(flashError) { %>
      <div class="error"><%= flashError %></div>
    <% } %>

    <% if(flashInfo) { %>
      <div class="info"><%= flashInfo %></div>
    <% } %>
