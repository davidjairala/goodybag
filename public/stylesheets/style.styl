body
  padding: 0
  margin: 0
  font: 15px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: #F0F0EF
  color: #262626

a
  color: #FF4040

h1, h2, h3, h4, h5
  color: #000027

header
  padding: 10px
  background-color: #000027
  color: white

  h1
    margin: 0
    padding: 5px
    font-size: 2.0em
    color: white

    a
      color: white
      text-decoration: none

.container
  width: 80%
  margin: 0 auto

form
  label
    display: inline-block
    width: 90px
    font-weight: bold

  input[type='text'], input[type='password']
    width: 300px
    padding: 3px
    font-size: 15px
    border: 2px solid #bbb
    color: #000027

    &:focus
      border-color: #000027

  input[type='submit']
    background-color: #FF4040
    color: white
    font-weight: bold
    border: 2px solid #BB2020
    font-size: 15px
    padding: 5px

.sign_up_form
  label
    width: 150px

ul.errors, ul.info
  padding: 10px
  margin: 10px 0
  list-style-type: square

  li
    margin: 5px 0 5px 25px

ul.errors
  background-color: #FF4040
  color: white

ul.info
  background-color: #AAF7DB
  color: #262626
